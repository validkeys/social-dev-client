nav
  $main-nav-logo-width = 100px
  &.main-nav
    width:      100%
    height:     $main-nav-height
    position:   fixed
    background: $main-nav-bg-color
    top:        0
    left:       0
    z-index:    1
    border-bottom: #ccc 1px solid    
    display:          flex
    flex-direction:   row
    align-items:      center
    justify-content:  left

    
    .item
      text-align:       center
      position:         relative
      display:          inline-block
      height:           100%
      line-height:      $main-nav-height
      
      &[data-role="global-nav-trigger"]
        padding:    0px 20px
        font-size:  20pt
        cursor:     pointer
        align-self: flex-end
        margin-left: auto //keep it on the right side
      
      &:nth-of-type(2)
        a
          text-transform: initial
      
      &:not(:first-child)
        border-right: #eee 1px solid
      
      &.logo
        width:                $main-nav-logo-width
        height:               $main-nav-height
        background-image:     url(/img/black-on-white-60-60.png);
        background-color:     #000
        background-repeat:    no-repeat
        background-position:  top center
        // margin-right:         $gutter-width
      
      a
        font-weight:      300 
        font-size:        .8em
        color:            #888
        letter-spacing:   .05em
        text-decoration:  none
        text-transform:   uppercase
        background:       transparent
        display:          block
        padding:          0 15px
        transition:       background 150ms ease
        position:         relative
        z-index: 1
        
        &.active
          color:      $accent-font-color
          background: $accent-color
          
          &:hover
            background: darken($accent-color, 5%)
        
        &:hover
          background: darken($main-nav-bg-color, 5%)
          
  &.tiny
    
    &.global-popup-visible
      .global-nav-item-wrapper.main
        display: block
    
    &.profile-menu-visible
      .global-nav-item-wrapper.profile
        display: block

    .global-nav-item-wrapper
      position:   absolute
      width:      150px
      background: #fff
      top:        $main-nav-height
      right:      0
      z-index:    100
      display:    none
      box-shadow: rgba(0,0,0, .1) 0px 0px 7px
      
      &.profile
        right: auto
        left:  $main-nav-logo-width
      
      .item
        display: block
        border-bottom: #eee 1px solid
        
  [data-role="current-profile-trigger"]
    margin-left:    $gutter-width
    border-right:   #eee 1px solid
    padding-right:  $gutter-width
    font-size:      12px
    user-select:    none
    cursor:         pointer
    
    .image
      circle(40px)
      bgImage()
      display: inline-block
      vertical-align: middle
      margin-right: 5px