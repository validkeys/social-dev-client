a
  &.cover-link
    position: absolute
    top:      0
    left:     0
    width:    100%
    height:   100%
    z-index:  1
  
  &.btn
    display:          inline-block
    text-decoration:  none
    padding:          10px 15px
    transition:       background 150ms ease, color 150ms ease
    letter-spacing:   .05em
    font-weight:      100
    border-radius:    3px
    
  &.cta
    background: $cta-color
    color:      #fff
    border-color: $cta-color
    
    &:hover
      background: lighten($cta-color, 15%)